FROM confluentinc/cp-kafka-connect-base:5.3.0
# latest or 7.1.1
RUN apt-get update -y \
    && apt-get install unzip --force-yes \
    && curl -O -L "https://d1i4a15mxbxib1.cloudfront.net/api/plugins/datastax/kafka-connect-cassandra-sink/versions/1.4.0/datastax-kafka-connect-cassandra-sink-1.4.0.zip" \
    && mkdir datastax-connector \
    && unzip datastax-kafka-connect-cassandra-sink-1.4.0.zip \
    && mv datastax-kafka-connect-cassandra-sink-1.4.0/lib/* datastax-connector/kafka-connect-cassandra.jar

ENV CONNECT_PLUGIN_PATH="/usr/share/java,/datastax-connector/kafka-connect-cassandra.jar"

WORKDIR /usr/app

COPY connect/ .
RUN chmod +x *.sh

CMD [ "/bin/bash", "-c", "echo \"Launching Kafka Connect worker\" & \
        /etc/confluent/docker/run & /usr/app/start-and-wait.sh"]
# https://github.com/yTek01/streaming-with-kafka-cassandra
# https://dataintegration.info/kafka-streaming-live-streaming-kafka-application-to-cassandra
# https://www.youtube.com/watch?v=wNnTNTVdglM
# https://www.quora.com/How-can-I-send-data-from-Kafka-to-Cassandra
# https://lenses.io/blog/2018/03/cassandra-to-kafka/
# https://docs.confluent.io/kafka-connect-cassandra/current/overview.html
# change run to
RUN   confluent-hub install --no-prompt hpgrahsl/kafka-connect-mongodb:1.1.0 \
   && confluent-hub install --no-prompt microsoft/kafka-connect-iothub:0.6 \
   && confluent-hub install --no-prompt wepay/kafka-connect-bigquery:1.1.0

YES YES! confluent-hub install confluentinc/kafka-connect-cassandra:latest
https://docs.confluent.io/kafka-connect-cassandra/current/cassandra_sink_connector_config.html#cassandra-sink-connector-config

